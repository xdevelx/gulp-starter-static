{% from "../macros/svg.twig" import icon %}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ page.title|default('Title') }}</title>
    <meta name="description" content="{{ page.descr|default('Description of the page.') }}">
    {% block stylesheets %}
      <link rel="stylesheet" href="css/style.css">
    {% endblock %}
  </head>
  <body class="{{ page.class|default(['page'])|join(' ') }}">
    {% block header %}
      {% include "../partials/header.twig" %}
    {% endblock %}
    {% block main %}
      Main content
    {% endblock %}
    {% block footer %}
      {% include "../partials/footer.twig" %}
    {% endblock %}
    {% block scripts %}
      <script src="js/app.js"></script>
    {% endblock %}
  </body>
</html>
